@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Liên kết đến Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .card-custom {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            height: 250px;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

            .card-custom .card-body {
                position: absolute;
                bottom: 0;
                width: 100%;
                background: rgba(0, 0, 0, 0.5);
                padding: 10px;
                border-radius: 0 0 15px 15px;
            }

        .container-custom {
            max-width: 1200px;
            margin-top: 40px;
        }

        .row-custom {
            display: flex;
            justify-content: center;
            gap: 30px; /* Khoảng cách giữa các khung */
        }

        .btn-custom {
            font-size: 1.2rem;
            padding: 10px 20px;
        }

        h1 {
            margin-bottom: 40px; /* Khoảng cách dưới tiêu đề */
        }
    </style>
</head>
<body>
    <div class="container container-custom">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="row row-custom">
            <div class="col-md-4">
                <div class="card card-custom" style="background-image: url('/img/DangNhap.jpg');">
                    <div class="card-body">
                        <h5 class="card-title"> quản lý nhân viên</h5>
                        <a href="/User/Danhsachnhanvien" class="btn btn-light btn-custom">Xem</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-custom" style="background-image: url('/img/Quanlydonhang.png');">
                    <div class="card-body">
                        <h5 class="card-title">Thêm Combmonan</h5>
                        <a href="/User/DanhsachUser" class="btn btn-light btn-custom">Xem</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-custom" style="background-image: url('/img/admin/hanghoa.jpg');">
                    <div class="card-body">
                        <h5 class="card-title">Quản lý sản phẩm</h5>
                        <a href="/User/Themnhanvien" class="btn btn-light btn-custom">Xem</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-custom" style="background-image: url('/img/admin/hanghoa.jpg');">
                    <div class="card-body">
                        <h5 class="card-title">Quản lý sản phẩm</h5>
                        <a href="/Foods/Getall" class="btn btn-light btn-custom">Xem</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-custom" style="background-image: url('/img/admin/hanghoa.jpg');">
                    <div class="card-body">
                        <h5 class="card-title">Quản lý sản phẩm</h5>
                        <a href="/User/Themnhanvien" class="btn btn-light btn-custom">Xem</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
